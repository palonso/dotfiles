    {
      "description": "Change button2 + mouse motion to scroll wheel (rev 1)",
      "available_since": "12.3.0",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button2",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": [
            {
              "pointing_button": "button2"
            }
          ],
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "enable_mouse_motion_to_scroll",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "enable_mouse_motion_to_scroll",
                "value": 0
              }
            }
          ]
        },
        {
          "type": "mouse_motion_to_scroll",
          "from": {
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "enable_mouse_motion_to_scroll",
              "value": 1
            }
          ]
        }
      ]
